<div class="scroll-store-container text-center mt-3 mb-2">
  <div class="scroll-button">
  </div>
  <h3 class="store-results-number"><%= @stores.length %> results</h3>
  <br>
  <% @stores.each do |store| %>
    <div class="store-card">
      <div class="store-info">
        <h3>
          <%= store.name %>
        </h3>
        <p class="store-address-street">
          <%= store.address_line_1 %>
        </p>
        <p class="store-address-city">
          <%= store.address_line_2 %>
        </p>
        <p class="store-phone-number">
          Tel.: <%= store.phone_number %>
        </p>
      </div>
      <div class="store-distance">
        <p>
          1.2 km
        </p>
      </div>
      <div class="item-availability">
        <%= store.num_of_items_on_list(@list) %>/<%= @list.items.count %> items
      </div>
    </div>
    <br>
  <% end %>
</div>
